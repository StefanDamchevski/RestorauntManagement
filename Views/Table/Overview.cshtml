@model List<RestorauntManagement.ViewModels.Table.TableOverviewModel>

@{
    ViewData["Title"] = "Home";
}

    <div class="row">
        @foreach (var table in Model)
        {
            <div class="col-md-4" style="margin-top:2%">
                <div class="card">
                    <div class="card-body">
                        @if (table.IsAvailable)
                        {
                            <h5 class="card-title text-success">Table Name: @table.TableName</h5>
                            <h6 class="card-subtitle mb-2 text-success">Free</h6>
                            <a asp-action="ReserveTable" asp-route-tableId="@table.Id" class="btn btn-primary">Reserve Table</a>
                        }
                        else
                        {
                            <h5 class="card-title text-danger">Table Name: @table.TableName</h5>
                            <h6 class="card-subtitle mb-2 text-danger">Served by: @User.Identity.Name</h6>
                            <a asp-action="Details" asp-route-tableId="@table.Id" class="btn btn-primary">Table Details</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>